.navbar {
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  background-size: 100% 100%;
}
.navbar .line {
  height: 1px;
  margin-top: 16rpx;
  background-color: rgba(255, 255, 255, 0.2);
}
.navbar .search {
  width: 690rpx;
  height: 94rpx;
  margin: 35rpx auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-radius: 16rpx;
  overflow: hidden;
}
.navbar .search input {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  height: 100%;
  background-color: #FFFFFF;
  padding-left: 30rpx;
  color: #999;
}
.navbar .search button {
  width: 120rpx;
  height: 100%;
  border-radius: 0;
  background: #FC961E;
  color: #fff;
}
.nav-title {
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  color: #fff;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.navbar-tabs {
  width: 100%;
  position: relative;
  z-index: 10;
  color: #333;
  font-size: 32rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.navbar-tabs .back {
  background-color: transparent;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.navbar-u-tabs {
  width: 280rpx;
  margin: 0 auto;
}
.navbar-tabs .item {
  width: 100rpx;
  color: #333;
  font-weight: 400;
  font-size: 28rpx;
  text-align: center;
}
.avatar {
  position: absolute;
  background-color: #f8f8f8;
  left: 40rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  border-radius: 50%;
  margin-top: 6rpx;
  z-index: 99;
}
.navbar-action-wrap {
  display: -webkit-flex;
  display: -webkit-box;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  position: absolute;
  left: 20rpx;
  z-index: 11;
  line-height: 1;
  padding-top: 8rpx;
  padding-bottom: 8rpx;
}
.navbar-action-group {
  border: 1px solid #f0f0f0;
  border-radius: 40rpx;
  overflow: hidden;
}
.navbar-action_item {
  padding: 3px 0;
  color: #333;
}
.navbar-action-group .navbar-action_item {
  border-right: 1px solid #f0f0f0;
  padding: 3px 14px;
}
.navbar-action-group .last {
  border-right: none;
}

